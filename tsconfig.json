    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "strict": true,
    "resolveJsonModule": true
  },
  "include": ["./src/**/*"]
}
